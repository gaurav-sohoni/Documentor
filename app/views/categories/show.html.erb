<h3>Categories List</h3>

<table>
  <tr><th>Category Name</th><th>Delete</th></tr>
<% for category in @categories %>
  <tr>
    <td><%= category.name %></td>
    <td><%= link_to 'Delete', :action => 'delete', :id => category %></td>
  </tr>    
<% end %>
</table>


<br/><br/><br/>
<h3>Create New Category</h3>
<% form_tag category_path(@category), :method=> :put do  -%>
  <%= text_field :category, :name %>
  <%= submit_tag 'Create'%>
<% end -%>

  
